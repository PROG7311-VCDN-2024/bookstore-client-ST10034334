@model FindYourStoryApp.Models.Order

@{
    ViewData["Title"] = "Edit";
}
<br>
<br>
<div class="card shadow rounded w-75 mx-auto">
    <div class="card-body">
        <div class="pl-1">
            <p class="card-title h5 text-dark text-uppercase text-center">EDIT ORDER</p>
        </div>
        <br>
        <br>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <div class="form-group">

                <div class="pl-1">
                    <p class="text-dark text-center">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
                    </p>
                </div>
            </div>
            <div class="form-group">

                    <div class="pl-1">
                        <p class="text-dark text-center">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" readonly />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </p>
                    </div>
            </div>
            <div class="form-group">

                        <div class="pl-1">
                            <p class="text-dark text-center">
                <label asp-for="PaymentStatus" class="control-label"></label>
                <input asp-for="PaymentStatus" class="form-control" />
                <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                            </p>
                        </div>
            </div>
            <div class="form-group">

                            <div class="pl-1">
                                <p class="text-dark text-center">
                <label asp-for="ShippingAddressId" class="control-label"></label>
                <select asp-for="ShippingAddressId" class="form-control" asp-items="ViewBag.ShippingAddressId"></select>
                <span asp-validation-for="ShippingAddressId" class="text-danger"></span>
                                </p>
                            </div>
            </div>
            <div class="form-group">

                                <div class="pl-1">
                                    <p class="text-dark text-center">
                <label asp-for="TotalAmount" class="control-label"></label>
                <input asp-for="TotalAmount" class="form-control" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                                    </p>
                                </div>
            </div>
            <div class="form-group">
                <center>
                <input type="submit" value="Save" class="btn btn-primary" />
                </center>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
