@model ProductViewModel

@{
    ViewData["Title"] = "Delete";
}

<br>
<br>
<div class="card shadow rounded w-75 mx-auto">
    <div class="card-body">
        <div class="pl-1">
            <h3 class="card-title h5 text-dark text-uppercase text-center">Delete</h3>
        </div>
        <br>
        <center>
            <p>Are you sure you want to delete this?</p>
        </center>
        <br>
            <center>
                <div class="pl-1">
                    <!--Richard C (2024) demonstrates how to display a Base64 image in HTML.-->
                    <img src="data:image/jpeg;base64,@Html.DisplayFor(model => model.Base64BookCover)" height="80" , width="80" />
                </div>
            </center>
        <div class="row">
            <div class="col-sm-6">
                <div class="pl-1">
                    <p class="text-dark text-center">
                        <strong>
                            @Html.DisplayNameFor(model => model.Title)
                            </strong>
                    </p>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="pl-1">
                    <p class="text-dark text-center">
                        @Html.DisplayFor(model => model.Title)
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="pl-1">
                    <p class="text-dark text-center">
                        <strong>@Html.DisplayNameFor(model => model.Author)</strong>
                    </p>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="pl-1">
                    <p class="text-dark text-center">
                        @Html.DisplayFor(model => model.Author)
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="pl-1">
                    <p class="text-dark text-center">
                        <strong>@Html.DisplayNameFor(model => model.Price)</strong>
                    </p>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="pl-1">
                    <p class="text-dark text-center">
                        @Html.DisplayFor(model => model.Price)
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="pl-1">
                    <p class="text-dark text-center">
                        <strong>@Html.DisplayNameFor(model => model.InStock)</strong>
                    </p>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="pl-1">
                    <p class="text-dark text-center">
                        @Html.DisplayFor(model => model.InStock)
                    </p>
                </div>
            </div>
        </div>
    </div>
    <form asp-action="Delete">
        <center>
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </center>
    </form>
   <br>
